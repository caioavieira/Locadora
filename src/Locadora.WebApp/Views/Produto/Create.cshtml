@model Locadora.Application.Dtos.ProdutoDto

@{
    ViewData["Title"] = "Cadastar Novo Produto";
}

<h2>@ViewData["Title"]</h2>
<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="col-6">
                    <label asp-for="Midia" class="control-label"></label>
                    <input asp-for="Midia" class="form-control" />
                </div>
                <div class="col-3">
                    <label asp-for="Titulo" class="control-label"></label>
                    <input asp-for="Titulo" class="form-control" />
                </div>
                <div class="col-1">
                    <label asp-for="Categoria" class="control-label"></label>
                    <input asp-for="Categoria" class="form-control" />
                </div>
                <div class="col-1">
                    <label asp-for="Tipo" class="control-label"></label>
                    <input asp-for="Tipo" class="form-control" />
                </div>
                <div class="col-2">
                    <label asp-for="Valor" class="control-label"></label>
                    <input asp-for="Valor" class="form-control" />
                </div>
                  <div class="col-2">
                    <label asp-for="Quantidade" class="control-label"></label>
                    <input asp-for="Quantidade" class="form-control" />
                </div>
            </div>
            <br />
            <hr />

            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" /> |
                <a asp-controller="Produto" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

